
CREATE DATABASE COLLEGE;
USE COLLEGE;
CREATE TABLE DEPARTMENT( DEPAR_ID INT  PRIMARY KEY,
 DEPAR_NAME varchar(20) 
);
CREATE TABLE SUDENTS(
SUD_ID INT primary KEY , NAME varchar(20),
DEPAR_ID INT ,
foreign key(DEPAR_ID) references DEPARTMENT(DEPAR_ID)
);
INSERT INTO DEPARTMENT (DEPAR_ID , DEPAR_NAME) VALUES
(101,'MECHANICAL'),
(102,'CIVIL'),
(103,'COMPUTER SCIENCE'),
(104,'BIO TECH');
INSERT INTO SUDENTS (SUD_ID, NAME, DEPAR_ID) VALUES 

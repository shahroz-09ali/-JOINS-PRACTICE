(4,'ADITYA',NULL),
(5,'AYUSH',NULL);
-- INNER JOIN--
SELECT * FROM SUDENTS;
SELECT * FROM DEPARTMENT;
SELECT S.SUD_ID,S.NAME,D.DEPAR_ID FROM SUDENTS S inner JOIN DEPARTMENT D ON S.DEPAR_ID=D.DEPAR_ID;
SELECT S.SUD_ID,S.NAME,D.DEPAR_ID FROM SUDENTS S LEFT JOIN DEPARTMENT D ON S.DEPAR_ID = D.DEPAR_ID;
SELECT S.SUD_ID,S.NAME,D.DEPAR_ID FROM SUDENTS S RIGHT JOIN DEPARTMENT D ON S.DEPAR_ID = D.DEPAR_ID;
-- UNION --
SELECT S.SUD_ID,S.NAME,D.DEPAR_ID FROM SUDENTS S LEFT JOIN DEPARTMENT D ON S.DEPAR_ID = D.DEPAR_ID
UNION
SELECT S.SUD_ID,S.NAME,D.DEPAR_ID FROM SUDENTS S RIGHT JOIN DEPARTMENT D ON S.DEPAR_ID = D.DEPAR_ID;

